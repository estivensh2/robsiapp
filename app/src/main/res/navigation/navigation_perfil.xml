<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/perfil"
    app:startDestination="@id/perfilFragment">

    <fragment
        android:id="@+id/perfilFragment"
        android:name="com.alp.app.ui.main.views.view.fragments.ProfileFragment"
        android:label="Perfil"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/accion_perfil_a_perfil_configuracion"
            app:destination="@id/perfilDetalleFragment" />
        <action
            android:id="@+id/accion_perfil_a_diplomas"
            app:destination="@id/listadoDiplomadosFragment" />
    </fragment>
    <fragment
        android:id="@+id/perfilDetalleFragment"
        android:name="com.alp.app.ui.main.views.view.fragments.ProfileDetailsFragment"
        android:label="ConfiguraciÃ³n"
        tools:layout="@layout/fragment_profile_details" >
        <argument
            android:name="imagen"
            app:argType="string" />
        <argument
            android:name="nombres"
            app:argType="string" />
        <argument
            android:name="apellidos"
            app:argType="string" />
        <argument
            android:name="idnotificaciones"
            app:argType="string" />
        <argument
            android:name="correoElectronico"
            app:argType="string" />
        <argument
            android:name="claveAcceso"
            app:argType="string" />
        <action
            android:id="@+id/accion_configuracion_a_iniciar_o_crear"
            app:destination="@id/entradaActivity" />
        <action
            android:id="@+id/accion_configuracion_a_cambiar_clave"
            app:destination="@id/cambiarClaveFragment" />
        <action
            android:id="@+id/action_perfilDetalleFragment_self"
            app:destination="@id/perfilDetalleFragment"
            app:launchSingleTop="false" />
    </fragment>
    <activity
        android:id="@+id/entradaActivity"
        android:name="com.alp.app.ui.main.views.view.activities.HomeActivity"
        android:label="EntradaActivity" />
    <fragment
        android:id="@+id/cambiarClaveFragment"
        android:name="com.alp.app.ui.main.views.view.fragments.ChangePasswordFragment"
        android:label="Cambiar clave"
        tools:layout="@layout/fragment_change_password" >
        <action
            android:id="@+id/accion_cambiar_clave_a_perfil"
            app:destination="@id/perfilFragment"
            app:popUpTo="@id/cambiarClaveFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/listadoDiplomadosFragment"
        android:name="com.alp.app.ui.main.views.view.fragments.CertificateFragment"
        android:label="Certificados"
        tools:layout="@layout/fragment_listado_diplomados" />
</navigation>