<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:context=".ui.registrar.RegistrarUsuarioFragment"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imagenCrearCuenta"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:contentDescription="@string/descripcion_imagen_crear_cuenta"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/saludando" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/poppins"
        android:text="@string/texto_nombres"
        android:textColor="?attr/colorTextoLabel"
        android:textSize="@dimen/dimensiones_labels"
        app:layout_constraintBottom_toTopOf="@+id/nombres"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/nombres"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="8dp"
        android:background="?attr/estiloCampoFormulario"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:importantForAutofill="no"
        android:inputType="textPersonName|textCapWords"
        android:textCursorDrawable="?attr/colorCursor"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/poppins"
        android:text="@string/texto_apellidos"
        android:textColor="?attr/colorTextoLabel"
        android:textSize="@dimen/dimensiones_labels"
        app:layout_constraintBottom_toTopOf="@+id/apellidos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/apellidos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="8dp"
        android:background="?attr/estiloCampoFormulario"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:importantForAutofill="no"
        android:inputType="textPersonName|textCapWords"
        android:textCursorDrawable="?attr/colorCursor"
        app:layout_constraintBottom_toTopOf="@+id/textView12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/poppins"
        android:text="@string/texto_correo_electronico"
        android:textColor="?attr/colorTextoLabel"
        android:textSize="@dimen/dimensiones_labels"
        app:layout_constraintBottom_toTopOf="@+id/correoElectronico"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/correoElectronico"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="8dp"
        android:autofillHints="no"
        android:background="?attr/estiloCampoFormulario"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:inputType="textEmailAddress"
        android:textCursorDrawable="?attr/colorCursor"
        app:layout_constraintBottom_toTopOf="@+id/textView13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/poppins"
        android:text="@string/texto_clave_acceso"
        android:textColor="?attr/colorTextoLabel"
        android:textSize="@dimen/dimensiones_labels"
        app:layout_constraintBottom_toTopOf="@+id/claveAcceso"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/claveAcceso"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="16dp"
        android:background="?attr/estiloCampoFormulario"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:textCursorDrawable="?attr/colorCursor"
        app:layout_constraintBottom_toTopOf="@+id/botonRegistrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="LabelFor" />

    <Button
        android:id="@+id/botonRegistrar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="32dp"
        android:background="?attr/estiloGeneralBotonPrimario"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/texto_registrarme"
        android:textColor="?attr/colorSegundario"
        android:textSize="@dimen/dimensiones_botones_iniciar_o_crear_cuenta"
        android:stateListAnimator="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        tools:targetApi="lollipop" />

    <ToggleButton
        android:id="@+id/mostrarClaveActual"
        android:layout_width="38dp"
        android:layout_height="23dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="?attr/estiloMostrarClave"
        android:textOff="@string/texto_vacio_toggle"
        android:textOn="@string/texto_vacio_toggle"
        app:layout_constraintBottom_toBottomOf="@+id/claveAcceso"
        app:layout_constraintEnd_toEndOf="@+id/claveAcceso"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/claveAcceso"
        app:layout_constraintTop_toTopOf="@+id/claveAcceso" />

</androidx.constraintlayout.widget.ConstraintLayout>