<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:bind="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".ui.main.view.fragments.languages.web.HtmlFragment"
>
    <com.github.ahmadaghazadeh.editor.widget.CodeEditor
            bind:lang="html"
            bind:isReadOnly="false"
            bind:isShowExtendedKeyboard="false"
            android:layout_width="match_parent"
            android:layout_height="0dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btnRun" android:id="@+id/codeEditor"/>
    <Button
            android:text="@string/text_run"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/btnRun"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:insetBottom="0dp" android:insetTop="0dp"
            app:cornerRadius="0dp" app:icon="@drawable/ic_baseline_play_arrow_24" app:iconGravity="textEnd"
            app:backgroundTint="?attr/colorSecondaryVariant"/>


</androidx.constraintlayout.widget.ConstraintLayout>