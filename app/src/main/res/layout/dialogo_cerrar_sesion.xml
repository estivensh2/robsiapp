<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/estiloDialogo"
    android:gravity="center">


    <TextView
        android:id="@+id/textView10"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:fontFamily="@font/nunito_bold"
        android:gravity="center"
        android:text="@string/texto_cerrar_sesion"
        android:textColor="?attr/colorTextoDialogo"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/botonSi"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:background="?attr/estiloGeneralBotonPrimario"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:text="@string/texto_si"
        android:textColor="@color/colorBlanco"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/botonNo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/botonNo"
        tools:ignore="ButtonStyle" />

    <Button
        android:id="@+id/botonNo"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:background="?attr/estiloGeneralBotonPrimario"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:text="@string/texto_no"
        android:textColor="@color/colorBlanco"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="ButtonStyle" />
</androidx.constraintlayout.widget.ConstraintLayout>