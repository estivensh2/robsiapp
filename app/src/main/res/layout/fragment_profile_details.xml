<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorFondo"
    tools:context=".ui.main.view.fragments.ProfileDetailsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:overScrollMode="never"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imagen"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="24dp"
                        android:contentDescription="@string/descripcion_imagen_actual"
                        app:civ_border_width="1dp"
                        app:civ_border_color="?attr/colorBordeImagen"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.498"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:srcCompat="@tools:sample/avatars" />

                    <TextView
                        android:id="@+id/botonSubirImagen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:fontFamily="@font/nunito_black"
                        android:text="@string/texto_actualizar_imagen"
                        android:textAllCaps="true"
                        android:textColor="?attr/colorPrimario"
                        android:textSize="@dimen/dimensiones_texto_actualizar_imagen"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imagen" />

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:fontFamily="@font/nunito_black"
                        android:text="@string/texto_nombres_"
                        android:textColor="?attr/colorTextoLabel"
                        android:textSize="@dimen/dimensiones_labels"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/botonSubirImagen" />

                    <EditText
                        android:id="@+id/nombres"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:background="?attr/estiloCampoFormulario"
                        android:ems="10"
                        android:fontFamily="@font/nunito"
                        android:importantForAutofill="no"
                        android:inputType="textPersonName|textCapWords"
                        android:textColor="?attr/colorTextoFormulario"
                        android:textCursorDrawable="?attr/colorCursorx"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView15"
                        tools:ignore="LabelFor" />

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/nunito_black"
                        android:text="@string/texto_clave_acceso_"
                        android:textColor="?attr/colorTextoLabel"
                        android:textSize="@dimen/dimensiones_labels"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/correoElectronico" />

                    <EditText
                        android:id="@+id/apellidos"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:background="?attr/estiloCampoFormulario"
                        android:ems="10"
                        android:fontFamily="@font/nunito"
                        android:importantForAutofill="no"
                        android:inputType="textPersonName|textCapWords"
                        android:textColor="?attr/colorTextoFormulario"
                        android:textCursorDrawable="?attr/colorCursorx"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView18"
                        tools:ignore="LabelFor" />

                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/nunito_black"
                        android:text="@string/texto_correo_electronico_"
                        android:textColor="?attr/colorTextoLabel"
                        android:textSize="@dimen/dimensiones_labels"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/apellidos" />

                    <EditText
                        android:id="@+id/correoElectronico"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:background="?attr/estiloCampoFormulario"
                        android:ems="10"
                        android:fontFamily="@font/nunito"
                        android:importantForAutofill="no"
                        android:inputType="textEmailAddress"
                        android:textColor="?attr/colorTextoFormulario"
                        android:textCursorDrawable="?attr/colorCursorx"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView17"
                        tools:ignore="LabelFor" />

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:fontFamily="@font/nunito_black"
                        android:text="@string/texto_apellidos_"
                        android:textColor="?attr/colorTextoLabel"
                        android:textSize="@dimen/dimensiones_labels"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/nombres" />

                    <EditText
                        android:id="@+id/claveAcceso"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="24dp"
                        android:layout_marginRight="24dp"
                        android:background="?attr/estiloCampoFormulario"
                        android:ems="10"
                        android:fontFamily="@font/nunito"
                        android:importantForAutofill="no"
                        android:inputType="textPassword"
                        android:textColor="?attr/colorTextoFormulario"
                        android:textCursorDrawable="?attr/colorCursorx"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView16"
                        tools:ignore="LabelFor" />

                    <Button
                        android:id="@+id/botonCambiarClave"
                        android:layout_width="35dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/cambiar_clave"
                        app:layout_constraintBottom_toBottomOf="@+id/claveAcceso"
                        app:layout_constraintEnd_toEndOf="@+id/claveAcceso"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="@+id/claveAcceso"
                        app:layout_constraintTop_toTopOf="@+id/claveAcceso" />

                    <TextView
                        android:id="@+id/textView19"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/nunito_black"
                        android:text="@string/texto_label_general"
                        android:textAllCaps="true"
                        android:textColor="?attr/colorPrimario"
                        android:textSize="@dimen/dimensiones_labels_configuraciones"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/claveAcceso" />

                    <TableLayout
                        android:id="@+id/tableLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:background="?attr/estiloTabla"
                        android:stretchColumns="1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView19">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_margin="@dimen/margin_filas_tablas"
                            android:background="?attr/estiloFilaArriba"
                            android:padding="15dp">

                            <TextView
                                android:id="@+id/textView1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nunito_black"
                                android:text="@string/texto_notificaciones"
                                android:textColor="?attr/colorTextoTabla"
                                android:textSize="@dimen/dimensiones_textos_tablas"
                                tools:layout_editor_absoluteX="229dp"
                                tools:layout_editor_absoluteY="1095dp" />

                            <Switch
                                android:id="@+id/switch_notificaciones"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:thumb="?attr/estiloSwitchThumb"
                                android:track="?attr/estiloSwitchTrack"
                                tools:ignore="UseSwitchCompatOrMaterialXml"
                                tools:layout_editor_absoluteX="313dp"
                                tools:layout_editor_absoluteY="1053dp" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_margin="@dimen/margin_filas_tablas"
                            android:background="?attr/estiloFilaAbajo"
                            android:padding="15dp">

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nunito_black"
                                android:text="@string/texto_sonidos"
                                android:textColor="?attr/colorTextoTabla"
                                android:textSize="@dimen/dimensiones_textos_tablas"
                                tools:layout_editor_absoluteX="229dp"
                                tools:layout_editor_absoluteY="1095dp" />

                            <Switch
                                android:id="@+id/switch_sonidos"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:thumb="?attr/estiloSwitchThumb"
                                android:track="?attr/estiloSwitchTrack"
                                tools:ignore="UseSwitchCompatOrMaterialXml"
                                tools:layout_editor_absoluteX="313dp"
                                tools:layout_editor_absoluteY="1053dp" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_margin="@dimen/margin_filas_tablas"
                            android:background="?attr/estiloFilaAbajo"
                            android:padding="15dp"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nunito_black"
                                android:text="@string/texto_modo_oscuro"
                                android:textColor="?attr/colorTextoTabla"
                                android:textSize="@dimen/dimensiones_textos_tablas"
                                tools:layout_editor_absoluteX="229dp"
                                tools:layout_editor_absoluteY="1095dp" />

                            <Switch
                                android:id="@+id/switch_modo_oscuro"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:thumb="?attr/estiloSwitchThumb"
                                android:track="?attr/estiloSwitchTrack"
                                tools:ignore="UseSwitchCompatOrMaterialXml"
                                tools:layout_editor_absoluteX="313dp"
                                tools:layout_editor_absoluteY="1053dp" />

                        </TableRow>

                    </TableLayout>

                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/nunito_black"
                        android:text="@string/texto_label_privacidad"
                        android:textAllCaps="true"
                        android:textColor="?attr/colorPrimario"
                        android:textSize="@dimen/dimensiones_labels_configuraciones"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

                    <Button
                        android:id="@+id/botonacercade"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:background="?attr/estiloGeneralBotonPrimario"
                        android:fontFamily="@font/nunito_black"
                        android:stateListAnimator="@null"
                        android:text="@string/texto_acercade"
                        android:textColor="?attr/colorSegundario"
                        android:textSize="@dimen/dimensiones_botones_generales"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView21"
                        tools:targetApi="lollipop" />

                    <Button
                        android:id="@+id/botonCerrarSesion"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="24dp"
                        android:background="?attr/estiloGeneralBotonPrimario"
                        android:fontFamily="@font/nunito_black"
                        android:stateListAnimator="@null"
                        android:text="@string/texto_boton_cerrar_sesion"
                        android:textColor="?attr/colorSegundario"
                        android:textSize="@dimen/dimensiones_botones_generales"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/botonacercade"
                        app:layout_constraintVertical_bias="0.0"
                        tools:targetApi="lollipop" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorFondo"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_url="https://assets2.lottiefiles.com/datafiles/V6a7qEnbQRmA83z/data.json" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>