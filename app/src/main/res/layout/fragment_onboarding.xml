<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAzulOscuro"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/margenes_generales"
    android:paddingTop="@dimen/margenes_generales"
    android:paddingRight="@dimen/margenes_generales"
    android:paddingBottom="@dimen/margenes_generales">


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/recicladorInduccion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/paginadorInduccion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/saltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:fontFamily="@font/nunito_black"
        android:text="@string/texto_induccion_saltar"
        android:textColor="@color/colorBlanco"
        app:layout_constraintBottom_toBottomOf="@+id/paginadorInduccion"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/paginadorInduccion"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/finalizar"
        app:layout_constraintEnd_toStartOf="@+id/finalizar"
        app:layout_constraintStart_toEndOf="@+id/saltar"
        app:tabBackground="@drawable/induccion_puntos"
        app:tabIndicator="@null">

    </com.google.android.material.tabs.TabLayout>

    <Button
        android:id="@+id/finalizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:background="@null"
        android:fontFamily="@font/nunito_black"
        android:text="@string/texto_induccion_finalizar"
        android:textColor="@color/colorBlanco"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>