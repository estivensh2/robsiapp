<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_cursos_detalle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:contentPadding="3dp"
    app:cardBackgroundColor="?attr/colorFondo"
    app:cardCornerRadius="@dimen/dimensiones_cardview_redondeados"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="false"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fondo_categorias"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="?attr/estiloTarjetasSegundarias"
        android:paddingLeft="@dimen/padding_cardview_curso_detalle"
        android:paddingRight="@dimen/padding_cardview_curso_detalle"
        android:stateListAnimator="@null"
        tools:targetApi="lollipop">

        <ImageView
            android:id="@+id/icono_cursos"
            android:layout_width="15dp"
            android:layout_height="18dp"
            android:contentDescription="@string/descripcion_imagen_categoria"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/titulo_cursox"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:fontFamily="@font/nunito"
            android:text="@string/texto_prueba"
            android:textColor="?attr/colorTextoEnFondo"
            android:textSize="@dimen/dimensiones_texto_curso_detalle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/icono_cursos"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>