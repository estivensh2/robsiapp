<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.ALP" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Colores generales de textos y fondos -->
        <item name="colorFondo">@color/colorBlanco</item>
        <item name="colorPrimario">@color/colorAzulOscuro</item>
        <item name="colorTextoEnFondo">@color/colorGrisMedio</item>
        <item name="colorSegundario">@color/colorAmarilloClaro</item>
        <!-- Navegacion expandible -->
        <item name="estiloNavegacionExpandida">@style/TituloExpandidaClaro</item>
        <item name="estiloNavegacionCollapsada">@style/TituloCollapsadaClaro</item>
        <item name="estiloNavegcionExpandible">@drawable/fondo_navegacion_top_claro</item>
        <!-- Dialogos -->
        <item name="colorTextoDialogo">@color/colorGrisOscuro</item>
        <!-- Tablas -->
        <item name="colorTextoTabla">@color/colorTextoLabel</item>
        <item name="estiloTabla">@drawable/fondo_tabla_claro</item>
        <!-- Switch -->
        <item name="estiloSwitchThumb">@drawable/switch_thumb_claro</item>
        <item name="estiloSwitchTrack">@drawable/switch_track_claro</item>
        <!-- Status bar color. -->
        <item name="toolbarStyle">@style/Toolbar_Claro</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/colorBlanco</item>
        <!-- Botones generales -->
        <item name="colorBordeImagen">@color/colorAzulOscuro</item>
    </style>

    <style name="Theme.ALP.Oscuro" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Colores generales de textos y fondos -->
        <item name="colorFondo">@color/colorGrisOscuro</item>
        <item name="colorPrimario">@color/colorAmarilloClaro</item>
        <item name="colorTextoEnFondo">@color/colorBlanco</item>
        <item name="colorSegundario">@color/colorAmarilloClaro</item>
        <!-- Navegacion expandible -->
        <item name="estiloNavegacionExpandida">@style/TituloExpandidaOscuro</item>
        <item name="estiloNavegacionCollapsada">@style/TituloCollapsadaOscuro</item>
        <item name="estiloNavegcionExpandible">@drawable/fondo_navegacion_top_oscuro</item>
        <!-- Dialogos -->
        <item name="colorTextoDialogo">@color/colorBlanco</item>
        <!-- Tablas -->
        <item name="colorTextoTabla">@color/colorTextoLabel</item>
        <item name="estiloTabla">@drawable/fondo_tabla_oscuro</item>
        <!-- Switch -->
        <item name="estiloSwitchThumb">@drawable/switch_thumb_oscuro</item>
        <item name="estiloSwitchTrack">@drawable/switch_track_oscuro</item>
        <!-- Status bar color. -->
        <item name="toolbarStyle">@style/Toolbar_Oscuro</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/colorGrisOscuro</item>
        <!-- Botones generales -->
        <item name="colorBordeImagen">@color/colorBlanco</item>
    </style>


    <style name="Tema.ALP.StatusBarColor" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/colorAzulOscuro</item>
    </style>
    <style name="Tema.ALP.Bienvenida" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/colorAzulOscuro</item>
        <item name="android:windowBackground">@color/colorAzulOscuro</item>
    </style>

</resources>